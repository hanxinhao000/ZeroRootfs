<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/theme_color"
    android:layout_height="match_parent"
    tools:context="com.termux.xinhao.web.activity.XHWebActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="@string/title_msg"
        android:textColor="#fff"
        android:textSize="23sp"
        android:layout_height="wrap_content"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
       android:layout_margin="20dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/color_55000000"
        app:cardCornerRadius="6dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_margin="8dp"
                android:textColor="@color/color_ffffff"
                android:textStyle="bold"
                android:textSize="13sp"
                android:layout_marginTop="5dp"
                android:layout_alignParentRight="true"
                android:text="@string/install_rootfs"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="match_parent"
                android:background="@color/color0A868686"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_height="1dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:padding="8dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_height="80dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:id="@+id/install"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="40dp"
                                android:src="@mipmap/ubuntu_system"
                                android:layout_height="40dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:padding="2dp"
                                android:paddingLeft="10dp"
                                android:textStyle="bold"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:text="@string/install_rootfs_ubuntu"
                                android:layout_alignParentRight="true"
                                android:textColor="@color/color_ffffff"
                                android:textSize="10sp" />

                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:id="@+id/install_rootfs_other"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="80dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:src="@mipmap/linux_other"
                        android:layout_height="40dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:padding="2dp"
                        android:paddingLeft="10dp"
                        android:textStyle="bold"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="@string/install_rootfs_other"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/color_ffffff"
                        android:textSize="10sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:id="@+id/open_termux"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="40dp"
                                android:src="@mipmap/jump_termux"
                                android:layout_height="40dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:padding="2dp"
                                android:paddingLeft="10dp"
                                android:textStyle="bold"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:text="@string/jump_termux"
                                android:layout_alignParentRight="true"
                                android:textColor="@color/color_ffffff"
                                android:textSize="10sp" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:padding="8dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_height="80dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:id="@+id/settings"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="40dp"
                                android:src="@mipmap/settings"
                                android:layout_height="40dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:padding="2dp"
                                android:paddingLeft="10dp"
                                android:textStyle="bold"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:text="@string/install_settings"
                                android:layout_alignParentRight="true"
                                android:textColor="@color/color_ffffff"
                                android:textSize="10sp" />

                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_height="80dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:id="@+id/switch_container"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="40dp"
                                android:src="@mipmap/rongqi_ico"
                                android:layout_height="40dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:padding="2dp"
                                android:paddingLeft="10dp"
                                android:textStyle="bold"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:text="@string/switch_container"
                                android:layout_alignParentRight="true"
                                android:textColor="@color/color_ffffff"
                                android:textSize="10sp" />

                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/color_55000000"
        app:cardCornerRadius="6dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_margin="8dp"
                android:textColor="@color/color_ffffff"
                android:textStyle="bold"
                android:textSize="13sp"
                android:layout_marginTop="5dp"
                android:layout_alignParentRight="true"
                android:text="@string/install_log"
                android:layout_height="wrap_content"/>



            <ScrollView
                android:id="@+id/scroll_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/console"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:text="@string/waiting_installation"
                        android:padding="8dp"
                        android:textColor="@android:color/white"
                        android:textSize="10sp" />

                </HorizontalScrollView>

            </ScrollView>


        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>
